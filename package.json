{
  "name": "thematrix",
  "version": "1.0.0",
  "private": true,
  "description": "A little POC to simulate our World according to the franchise The Matrix",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack",
    "start": "node src/server/index.js",
    "client": "cross-env NODE_ENV=development webpack-dev-server --devtool inline-source-map --hot",
    "server": "nodemon src/server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku": "git push heroku master --force"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rousan/TheMatrix.git"
  },
